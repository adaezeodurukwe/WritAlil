{
  "name": "writalil",
  "version": "1.0.0",
  "main": "app.js",
  "repository": "https://github.com/adaezeodurukwe/WritAlil.git",
  "author": "Adaeze Odurukwe <daizyodurukwe@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0",
    "npm": "6.12.0"
  },
  "scripts": {
    "start": "node ./dist/app.js",
    "build": "rm -rf dist && mkdir dist && babel ./server --out-dir ./dist  --source-maps",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm run build",
    "start:dev": "nodemon --exec babel-node ./server/app.js",
    "lint": "eslint ./server --fix",
    "pretest": "npm run db:refresh ",
    "test": "jest --silent --coverage --detectOpenHandles --forceExit",
    "db:migrate": "node_modules/.bin/sequelize db:migrate",
    "db:reset": "node_modules/.bin/sequelize db:migrate:undo:all",
    "db:refresh": "npm run db:reset && npm run db:migrate",
    "db:seed": "node_modules/.bin/sequelize db:seed:all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.5.5",
    "@sendgrid/mail": "^6.4.0",
    "babel-eslint": "^10.0.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "crypto-random-string": "^3.0.1",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-validator": "^6.2.0",
    "husky": "^3.0.4",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.1",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "redis": "^2.8.0",
    "sequelize": "^5.18.1",
    "sequelize-cli": "^5.5.1",
    "supertest": "^4.0.2"
  },
  "devDependencies": {
    "eslint": "^6.2.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "jest": "^24.9.0"
  }
}
